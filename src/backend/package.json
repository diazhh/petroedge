{
  "name": "@scadaerp/backend",
  "version": "0.1.0",
  "description": "Backend API para ERP+SCADA Petrolero",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "db:migrate": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate:pg",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/common/database/seed.ts",
    "kafka:init": "tsx src/common/kafka/init-topics.ts"
  },
  "keywords": [
    "scada",
    "erp",
    "oil-gas",
    "petroleum",
    "edge-computing"
  ],
  "author": "SCADA+ERP Team",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/multipart": "^8.1.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/websocket": "^10.0.1",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.3",
    "fastify": "^4.25.2",
    "jsonwebtoken": "^9.0.3",
    "mqtt": "^5.3.5",
    "pg": "^8.11.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "drizzle-kit": "^0.20.10",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
