# Edge Gateway Configuration

# Gateway Identity
GATEWAY_ID=edge-gateway-001
GATEWAY_NAME=Edge Gateway 1
SITE_NAME=Site Alpha

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=edge-gateway
KAFKA_GROUP_ID=edge-gateway-group

# Modbus Configuration
MODBUS_ENABLED=true
MODBUS_HOST=192.168.1.100
MODBUS_PORT=502
MODBUS_TIMEOUT=5000
MODBUS_RETRY_ATTEMPTS=3

# OPC-UA Configuration
OPCUA_ENABLED=false
OPCUA_ENDPOINT=opc.tcp://localhost:4840
OPCUA_USERNAME=
OPCUA_PASSWORD=

# Local Database (SQLite)
DB_PATH=./data/edge.db

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Data Collection
POLLING_INTERVAL_MS=1000
BATCH_SIZE=100
BUFFER_SIZE=1000

# Health Check
HEALTH_CHECK_PORT=3001
